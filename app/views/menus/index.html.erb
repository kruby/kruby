<%= render :partial => "layouts/menu" %>
<div id="admin_liste">

<h1>Listing menus <%= link_to '[Ny menu]', new_menu_path %></h1>

<table>
  <tr>
	<th>ID</th>
    <th>Navn</th>
    <th>Titel</th>
    <th>Indhold</th>
    <th>Aktiv</th>
	<th>Handling</th>
  </tr>

<% for menu in @menus %>
  <tr>
	<td><%= menu.id %></td>
    <td><%= menu.name %></td>
    <td><%= menu.title %></td>
    <td><%= menu.body %></td>
    <td class='pos'><%=link_to active_test(menu.active), :action => 'active', :id => menu.id%></td>
    <td><%= link_to '[Vis]', menu %>
    <%= link_to '[Rediger]', edit_menu_path(menu) %>
   <%= link_to '[Slet]', menu, :confirm => 'Er du sikker?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<!-- Total antal timer: <%#= Hour.sum(:number, :conditions => ['user_id = ?', '2']) %> -->

</div>
