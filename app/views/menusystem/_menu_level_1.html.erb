<% @tabs.each do |level_1| -%> <!-- @tabs kommer fra application.rb -->

		<li class="admin_navlabel">
		
			<% if level_1.redirect? %>
			
					<%= link_to level_1.navlabel, {:controller => level_1.controller_redirect, :action => level_1.action_redirect, :id => level_1.resource_id} %>
			
			<% else %>
		
				<%= link_to level_1.navlabel, :controller => level_1.controller_name, :product_id => nil %>
					<!-- PRODUCT_ID => NIL ER FOR AT SIKRE AT MAN KAN KOMME DIREKTE TIL TEXTLINES NÅR MAN HAR REDIGERET I PRODUCTS. -->
					<!-- DET GØR IKKE NOGET FOR DE ANDRE LINKS, AT DEN BRUGES DER OGSÅ -->
	
				<% @level_2 = level_1.children %>
		
				<%= render :partial => "menusystem/menu_level_2" %>
			
			<% end %>
		
<% end -%>


