<%#Her skal jeg finde menupunkterne til hovedmenuen i Contents. Dvs. alle dem der tilhører Controlleren pages og som er aktive. Menuerne dannes herfra, men det efterfølgende indhold hentes i Pages eller anden tabel.%>
<ul>
	
	
<% @last_one = @main_menu.last %>



<% @main_menu.each do |menu| %>


	<% if menu.action_redirect == 'forside'%>
		<li class="streg"><%= link_to menu.navlabel.mb_chars.upcase, root_url %>	
	<% else %>	
	
		<% if @last_one.id == menu.id%>
			<li class="uden_streg">
		<% else %>
			<li class="streg">
		<% end %>

		<% if menu.redirect? %>
				<%= link_to menu.navlabel.mb_chars.upcase, :controller => menu.controller_redirect, :action => menu.action_redirect, :id => menu.resource_id %>
		<% else %>
				<%= link_to menu.navlabel.mb_chars.upcase, :controller => menu.controller_name %>		
		<% end %>
	<% end %>
	
	</li>
	
<% end %>


</ul>


