<%= render :partial => "layouts/menu" %>
<div id="admin_formular">
	
<%= form_for(@relation) do |f| %>
<%= f.hidden_field :lock_version %>
	
<h1>Redigering af relation
	<%# previous_next(@relation, 'company') %>
	<%#= link_to '[<]', :action => 'edit', :id => @the_objects[@key-1].id unless @key == 0%>
	<%#= link_to '[>]', :action => 'edit', :id => @the_objects[@key+1].id unless @key == @counter-1%>
	<%= f.submit :class => 'button'%>
	<%= link_to '[Tilbage]', relations_path %>
	<%#= link_to '[Email info]', :action => 'email_relation_info', :id => @relation.id %>
	</h1>

<%= error_messages_for :relation %>
<div class="dropdowns">
<p class="drop_down_1">
    <b>Kategori</b><br />
    <%#	= f.text_field :category %>
	<%= f.select (:category, [	
								['Samarbejdspartner', 'Samarbejdspartner'],
								['Kunde', 'Kunde'], 
								['Emne', 'Emne'],
								['Kontakt', 'Kontakt'],
								['Leverandør', 'Leverandør'],
								['X-kunde', 'X-kunde']
								], { :include_blank => true}) %>
  </p>
<br />
  <p class="drop_down_2">
    <b>Ansvarlig</b><br />
    <%#= f.text_field :responsible %>
<%= f.select (:responsible, [	['ALLE', 'ALLE'],
								['TKS', 'TKS']
								], { :include_blank => true} ) %>
  </p>
</div>

<div class='label'><%= f.label :Tilknyt_en_bruger %></div>
<div class='input'><%= f.collection_select(:user_id, User.all, :id, :name, :prompt => 'Vælg en bruger', :include_blank => true ) %></div>

<div class="date_and_time">
<p class="date">
    <b>Næste kontakt</b><br />
	<%= f.datetime_select :next_action, :include_blank => true, :order => [:day, :month, :year ], :start_year => 2011%>
</p>


</div>
<div class="text_fields">
  <p>
    <b>Firma</b><br />
    <%= f.text_field :company %>
  </p>

  <p>
    <b>Adresse</b><br />
    <%= f.text_field :address %>
  </p>

  <p>
    <b>Postnr./By</b><br />
    <%= f.text_field :postno, :size => 5 %> <%= f.text_field :city, :size => 21 %>
  </p>

  <!-- <p>
      <b>By</b><br />
      <%#= f.text_field :city %>
    </p> -->


<p>
    <b>Kontakt information</b><br />
    <%= f.text_area :phone, :size => ('60x8') %>
  </p>

  <p>
    <b>Log</b><br />
    <%= f.text_area :log, :size => ('60x8') %>
  </p>

 
</div>
<% end %>
</div>