<%= render :partial => "layouts/menu" %>
<div id="admin_formular">

<%= form_for(@relation) do |f| %>

<h1>Ny relation
    <%= f.submit :class => 'button'%>
	<%= link_to '[Tilbage]', relations_path %>
	</h1>

<%= error_messages_for :relation %>
<div class="dropdowns">
<p class="drop_down_1">
    <b>Kategori</b><br />
    <%#	= f.text_field :category %>
	<%= f.select (:category, [	
								['Samarbejdspartner', 'Samarbejdspartner'],
								['Kunde', 'Kunde'], 
								['Emne', 'Emne'],
								['Kontakt', 'Kontakt'],
								['Leverandør', 'Leverandør'],
								['X-kunde', 'X-kunde']
								], { :include_blank => true, :selected => 'Kontakt' }) %>
  </p>

  <p class="drop_down_2">
    <b>Ansvarlig</b><br />
    <%#= f.text_field :responsible %>
<%= f.select (:responsible, [	['ALLE', 'ALLE'],
								['TKS', 'TKS']
								], { :include_blank => true, :selected => 'Alle' } ) %>
  </p>
</div>

<div class='label'><%= f.label :Tilknyt_en_bruger %></div>
<div class='input'><%= f.collection_select(:user_id, User.all, :id, :name, :prompt => 'Vælg en bruger', :include_blank => true ) %></div>

<div class="date_and_time">
	<p class="date">
	    <b>Næste kontakt</b><br />
		<%= f.datetime_select :next_action, :include_blank => true, :default => nil, :start_year => 2011 %>
	</p>
</div>

<div class="text_fields">
  <p>
    <b>Firma</b><br />
    <%= f.text_field :company %>
  </p>

  <p>
    <b>Adresse</b><br />
    <%= f.text_field :address %>
  </p>

  <p>
    <b>Postnr./By</b><br />
    <%= f.text_field :postno, :size => 5 %> <%= f.text_field :city, :size => 21 %>
  </p>

  <p>
    <b>Email</b><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <b>WWW</b><br />
    <%= f.text_field :homepage %>
  </p>


<p>
    <b>Kontakt information</b><br />
    <%= f.text_area :phone, :size => ('60x8') %>
  </p>

  <p>
    <b>Log</b><br />
    <%= f.text_area :log, :size => ('60x8') %>
  </p>

<% end %>
</div>


</div>
