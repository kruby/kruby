<%= render :partial => "layouts/menu" %>
<div id="admin_liste">

<h1>
	Klippekort 
	<%= link_to '[Nyt klippekort]', new_voucher_path %><br>
</h1>

<%# @turnover = Voucher.sum{ |v| v.hourly_rate * v.number } rescue nil %>
<%# @total_hours = Voucher.sum('number') rescue nil %>
<p>
	Gennemsnitlig timepris uden vægtning: <%= number_with_precision(Voucher.average('hourly_rate'), :locale => :da ) rescue nil %><br>
	Gennemsnitlig timepris med vægtning: <%= number_with_precision(Voucher.average_hourly_rate, :locale => :da ) rescue nil %>
</p>

<table>
  <tr>
    <th>Beskrivelse</th>
    <th>Antal</th>
	<th>Pris</th>
    <!-- <th>Relation</th> -->
	<th><%= sort_link @q, :relation_id, 'Kunde', :default_order => :desc  %></th>
    <th>Gyldig fra</th>
	<th>Rest. dage</th>
	<th>Rest. klip</th>
	<!-- <th><%#= sort_link @q, @result, 'Rest. klip', :default_order => :desc  %></th> -->
    <th>Oprettet af</th>
    <th>Handling</th>
      </tr>

<% @vouchers.each do |voucher| %>

<% @relation = Relation.find(voucher.relation_id) %>
<% @result = @relation.vouchers.sum(:number) - @relation.hours.sum(:number) rescue nil %>

  <tr>
    <td><%= voucher.description %></td>
    <td class='pos'><%= voucher.number %></td>
	<td class='pos'><%= voucher.hourly_rate %></td>
    <td><%= Relation.find(voucher.relation_id).company rescue nil %></td>
    <td><%= voucher.date %></td>
	<td class='pos'><%= voucher.date + 1.year - Time.now.to_date %></td>
	<td class='pos'>
		<% if @result < 0 %>
			<span id='voucher_red'> <%= @result %> klip mangler</span>) 
		<% else %>
			<span id='voucher_green'> <%= @result %> klip resterer</span> 
		<% end %>
	</td>
    <td><%= User.find(voucher.user_id).name %></td>
    <td>
		<%#= link_to 'Show', voucher %>
		<%= link_to '[Ret]', edit_voucher_path(voucher) %>
		<%= link_to '[Slet]', voucher, :confirm => 'Er du sikker?', :method => :delete %>
	</td>
  </tr>
<% end %>
</table>

<br />

</div>



