<%= render :partial => "layouts/menu" %>
<div id="admin_liste">
<h1>Brugerliste <%= link_to '[Ny bruger]', new_user_path %></h1>

<table border="0" cellspacing="0" cellpadding="3">
  <tr>
	<th>ID</th>
    <th>Navn</th>
	<th>Blognavn</th>
    <th>e-mail</th>
	<th>Kategori</th>
	<th>Relation</th>
	<th>Handling</th>
  </tr>

<% for user in @users %>
  <tr>
	<td width=15px><%= user.id %></td>
	<td><%= user.name %></td>
	<td width=60px><%= user.blogname %></td>
    <td width=200px><%= user.email %></td>
	<td class="pos"><%=link_to user.category, :action => 'category', :id => user.id rescue nil%></td> <%# access findes i application.rb %>
	<td><%= Relation.find_by_user_id(user.id).company rescue nil %></td>	
	<td>
	
		<%#= link_to '[Vis]', user %>
		<%= link_to '[Ret]', edit_user_path(user) %>
    	<%= link_to '[Slet]', user, :confirm => "Er du sikker at du vil slette brugeren: '#{user.name}'?", :method => :delete %>
	</td>
  </tr>

<% end %>

</table>

<br />


</div>